@page "/Contact"


<PageTitle>Contact MDR Team</PageTitle>

<TopBar BarTitle="" ShowSearchLink=true />

<div id="body-outer"> 
    <div id="body-main">
        <div>
            <h1>Contact us</h1>
        </div>
        <div class="container">
            <div class="row form-group">
                <div class="col-md-12">
                    <label for="reason" class="text-capitalize" style="font-size:12px; color:#5979af;font-weight:bold">Reason for contacting us</label>
                    <select id="reason" class="form-control">
                        <option value="null">select an option</option>
                    </select>
                </div>
            </div>
            <div class="row form-group pt-2">
                <div class="col-md-12">
                    <label for="message" class="text-capitalize" style="font-size:12px; color:#5979af;font-weight:bold">message</label>
                    <textarea cols="30" rows="5" id="message" class="form-control" placeholder="Message"></textarea>
                </div>
            </div>
            <div class="row form-group pt-2">
                <div class="col-md-6">
                    <label for="firstName" class="text-capitalize"style="font-size:12px; color:#5979af;font-weight:bold">First Name</label>
                    <input type="text" id="firstName" class="form-control" placeholder="First Name">
                </div>
                <div class="col-md-6">
                    <label for="lastName" class="text-capitalize" style="font-size:12px; color:#5979af;font-weight:bold">Last Name</label>
                    <input type="text" id="lastName" class="form-control" placeholder="Last Name">
                </div>
            </div>
            <div class="row form-group pt-2">
                <div class="col-md-12">
                    <label for="organization" class="text-capitalize"style="font-size:12px; color:#5979af;font-weight:bold">organization</label>
                    <input type="text" id="organization" class="form-control" placeholder="Organization">
                </div>
            </div>
            <div class="row form-group pt-2">
                <div class="col-md-12">
                    <label for="email" class="text-capitalize"style="font-size:12px; color:#5979af;font-weight:bold">email</label>
                    <input type="text" id="email" class="form-control" placeholder="Email">
                </div>
            </div>
            <div class="row form-group pt-2">
                <div class="col-md-12">
                    <label for="confirmEmail" class="text-capitalize"style="font-size:12px; color:#5979af;font-weight:bold">confirm email</label>
                    <input type="text" id="confirmEmail" class="form-control" placeholder="Confirm Email">
                </div>
            </div>
            <div class="row form-group pt-2 pb-5">
                <div class="col-md-12 text-center">
                    <span class="pr-2"><button class="btn btn-primary w-25 text-capitalize">send</button></span>
                    <button class="btn btn-warning w-25 text-capitalize">cancel</button>

                </div>
            </div>
        </div>
    </div>
</div>

