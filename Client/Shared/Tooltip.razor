<div class="tooltip-wrapper">
    <span class="@tooltipstyle @positionstyle">@Text</span>
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string? Text { get; set; }
    [Parameter] public string? Position { get; set; }
    [Parameter] public string? Size { get; set; }

    string? positionstyle;
    string? tooltipstyle;
    protected override void OnInitialized()
    {
        positionstyle = Position switch
        {
            "top" => "top-tooltip",
            "left" => "left-tooltip",
            "right" => "right-tooltip",
            _ => "top-tooltip"
        };

        tooltipstyle = "tooltip-style"; // default
        if (Size == "large")
        {
            tooltipstyle = "large-tooltip-style";
            if (Position == "left")   // should in all current usage
            {
                positionstyle = "large-left-tooltip";
            }

        }

        

    }
}